<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Image
            Source="logo_isp.png"
            HeightRequest="185"
            Aspect="AspectFit" />

            <Label
            Text="Prácticas Profesionalizantes"
            Style="{StaticResource Headline}"
            TextColor="Black"
            SemanticProperties.HeadingLevel="Level1" />

            <!-- Línea separadora -->
            <BoxView
            HeightRequest="1"
            Color="Gray"
            HorizontalOptions="FillAndExpand" />

            <Label
            Text="Tecnicatura Superior en Desarrollo de Software"
            Style="{StaticResource SubHeadline}"
            TextColor="Black"
            SemanticProperties.HeadingLevel="Level2" />

            <!-- Línea separadora -->
            <BoxView
            HeightRequest="1"
            Color="Gray"
            HorizontalOptions="FillAndExpand" />

            <Label
            Text="Instituto Superior de Profesorado Nº20 'Senador Néstor J. Zamaro'"
            Style="{StaticResource SubHeadline}"
            TextColor="Black"
            SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
